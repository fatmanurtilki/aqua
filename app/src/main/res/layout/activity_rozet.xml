<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCEFFF">

    <!-- Toolbar -->
    <include layout="@layout/toolbar_layout" />

    <!-- Üstte kazanılan rozetler -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/rozet_mercan"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/rozet_gemi"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/rozet_kabuk"
            android:layout_margin="8dp" />
    </LinearLayout>

    <!-- Diğer rozetler -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Her rozet için satır -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/rozet_inci"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İnci Rozeti"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView android:layout_width="64dp" android:layout_height="64dp"
                    android:src="@drawable/rozet_denizalti"
                    android:layout_marginEnd="12dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Denizaltı Rozeti" android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView android:layout_width="64dp" android:layout_height="64dp"
                    android:src="@drawable/rozet_dalga"
                    android:layout_marginEnd="12dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Dalga Rozeti" android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView android:layout_width="64dp" android:layout_height="64dp"
                    android:src="@drawable/rozet_kaplu"
                    android:layout_marginEnd="12dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Kaplumbağa Rozeti" android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView android:layout_width="64dp" android:layout_height="64dp"
                    android:src="@drawable/rozet_yildiz"
                    android:layout_marginEnd="12dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Deniz Yıldızı Rozeti" android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
