<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCEFFF"
    android:padding="16dp">

    <!-- Menü ikonu -->
    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/icon_menu"
        android:contentDescription="Menü"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <!-- Balık görseli -->
    <ImageView
        android:id="@+id/profileFish"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/melek_balik"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:contentDescription="Profil Balığı" />

    <!-- Kalem (düzenle) ikonu -->
    <ImageView
        android:id="@+id/editIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_edit"
        android:layout_alignTop="@id/profileFish"
        android:layout_alignEnd="@id/profileFish"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Düzenle" />

    <!-- Mail Değiştir -->
    <LinearLayout
        android:id="@+id/changeEmailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/profileFish"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_fish"
            android:contentDescription="Balık simgesi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail Değiştir"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Şifre Değiştir -->
    <LinearLayout
        android:id="@+id/changePasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/changeEmailLayout"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_fish"
            android:contentDescription="Balık simgesi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifre Değiştir"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>
